<%= render partial: "shared/nav" %>

<body>
  <div class="row">
  <p class='col-12'>My Coupons</p>
  </div>

  <p><%= link_to "Create New Coupon", new_merchant_coupon_path(@merchant) %></p>


  <% @merchant.coupons.each do |coupon| %>
    <% if coupon.discount_type == "dollar_off" %>
      <p>Coupon name: <%= link_to "#{coupon.name}", merchant_coupon_path(@merchant, coupon) %>, value is <%= coupon.discount_value.round %> dollars off!</p>
    <% elsif coupon.discount_type == "percent_off" %>
      <p>Coupon name: <%= link_to "#{coupon.name}", merchant_coupon_path(@merchant, coupon) %>, value is <%= coupon.discount_value.round %> percent off!</p>
    <% end %>
  <% end %>
</body>